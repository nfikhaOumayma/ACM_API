-----------------------------------
----- TABLE : ACM_CUSTOMER_MEMBER 
-----------------------------------
CREATE TABLE ACM_CUSTOMER_MEMBER(
  ID_ACM_CUSTOMER_MEMBER BIGINT NOT NULL IDENTITY(1,1) PRIMARY KEY,  
  CUSTOMER_ID BIGINT NOT NULL,
  ORGANISATION_ID BIGINT NULL,
  GROUPE_ID BIGINT NULL,
  CUSTOMER_TYPE varchar(50) NULL,
  MEMBER_OPEN_DATE DATETIME NULL,
  MEMBER_END_DATE DATETIME NULL,
	
  ACM_ENABLED BIT NOT NULL,
  DATE_INSERTION DATETIME NULL,
  INSERT_BY  VARCHAR (256) NULL,
  DATE_LAST_UPDATE DATETIME NULL,
  UPDATED_BY  VARCHAR (256) NULL,
  ACM_VERSION INT NULL
);
