-- ACM : DATA BASE

--- RESET DB : 
IF OBJECT_ID('DBO.ACM_SETTING_HISTORIQUE', 'U') IS NOT NULL
DROP TABLE DBO.ACM_SETTING_HISTORIQUE;
-------------

----- TABLE : ACM_SETTING_HISTORIQUE
CREATE TABLE ACM_SETTING_HISTORIQUE(
    ID_ACM_SETTING_HISTORIQUE BIGINT NOT NULL IDENTITY(1,1) PRIMARY KEY,
	ACTION VARCHAR (100) NOT NULL,
	TABLE_NAME VARCHAR (100) NOT NULL,
	ID_OBJECT BIGINT NOT NULL,
	UPDATED_DATA VARCHAR(3000) NULL,
	NEW_DATA VARCHAR(3000) NULL,
	
	DATE_UPDATE DATETIME NOT NULL,
	UPDATED_BY  VARCHAR (256) NOT NULL
);