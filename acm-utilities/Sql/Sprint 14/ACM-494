----- TABLE : IB LOAN 
CREATE TABLE IB_LOAN(

	ID_IB_LOAN BIGINT NOT NULL IDENTITY(1,1) PRIMARY KEY,   
	ACCOUNT_NUMBER_IB VARCHAR (256),
	ID_ACM_CUSTOMER BIGINT NULL,
	CUSTOMER_NAME VARCHAR (256) COLLATE Arabic_CI_AI_KS_WS ,
	STATUT INT not null default 0,
	PORTFOLIO_ID BIGINT NOT NULL, --- 0 : PROFIL BRANCH MANAGER 
	ACCOUNTPORTFOLIO_CODE VARCHAR (256) NULL,
	ACCOUNTPORTFOLIO_DESCRIPTION VARCHAR (256) COLLATE Arabic_CI_AI_KS_WS null,
	BranchID int not null default 0, 
	BRANCHE_NAME varchar(50)  COLLATE Arabic_CI_AI_KS_WS null, 
	BRANCHE_DESCRIPTION varchar(200)  COLLATE Arabic_CI_AI_KS_WS null,
	LOAN_OWNER VARCHAR (512) COLLATE Arabic_CI_AI_KS_WS null,
	PRODUCT_ID INT NULL,
	LOANPRODUCT_CODE VARCHAR (256) NULL,
	LOANPRODUCT_DESCRIPTION VARCHAR (512) COLLATE Arabic_CI_AI_KS_WS null ,
	AMOUNT DECIMAL NULL,
    CURRENCY_SYMBOL VARCHAR (10) NULL,
	CURRENCY_DECIMALPLACES INT NULL,
	APPLYDATE DATE NULL,
    APPLY_AMOUNT_TOTAL BIGINT NULL,
    ISSUE_FEE_AMOUNT BIGINT NULL,
    TERM_PERIOD INT NULL,
    PERIOD_FREQ VARCHAR (256) NULL,
    ISSUE_DATE DATETIME NULL,
    PRODUCT_RATE INT  NULL,
    GRACE_PERIOD INT NULL,
    ACCOUNT_INDUSTRY_CODE_CODE VARCHAR (256) COLLATE Arabic_CI_AI_KS_WS null,
    ACCOUNT_INDUSTRY_CODE_DESCRIPTION VARCHAR (256) COLLATE Arabic_CI_AI_KS_WS null,
    PRODUCT_LOAN_REASONS_CODE VARCHAR (256) COLLATE Arabic_CI_AI_KS_WS null,
 	PRODUCT_LOAN_REASONS_DESCRIPTION VARCHAR (256) COLLATE Arabic_CI_AI_KS_WS null,
	INITIAL_PAYMENT_DATE DATE NULL,
    NORMAL_PAYMENT BIGINT NULL,
    IGNORE_ODD_DAYS BIT NULL,
    PERIODS_DEFERRED INT NULL,
    CALCULATE_INITIAL_PAYMENT_DATE BIT NULL,
    TERM_PERIOD_ID BIGINT NULL,
	LOAN_NOTE VARCHAR (512) COLLATE Arabic_CI_AI_KS_WS null,
	
	ACM_ENABLED BIT NOT NULL,
	DATE_INSERTION DATETIME NULL,
	INSERT_BY  VARCHAR (256) NULL,
	DATE_LAST_UPDATE DATETIME NULL,
	UPDATED_BY  VARCHAR (256) NULL,
	ACM_VERSION INT NULL
	
	
	FOREIGN KEY (ID_ACM_CUSTOMER) REFERENCES ACM_CUSTOMER(ID_ACM_CUSTOMER);
	);
