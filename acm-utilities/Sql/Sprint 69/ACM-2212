CREATE TABLE ACM_SETTING_TOPUP(
 ID_ACM_SETTING_TOPUP  BIGINT NOT NULL IDENTITY(1,1) PRIMARY KEY,
 ID_ABACUS_PRODUCT BIGINT,
 ID_ACM_PRODUCT BIGINT,
 TOPUP_MIN_LOAN_PAYMENT_PERCENTAGE decimal(4,2),
 TOPUP_MAX_CONTINUOUS_LATE_DAYS int,
 TOPUP_MAX_SEPARATE_LATE_DAYS int,
 TOPUP_MIN_LOAN_AMOUNT_TYPE int,
 TOPUP_MIN_FIXED_LOAN_AMOUNT decimal(16,4),
 TOPUP_MAX_ALLOWED_TOPUPS int,
 TOPUP_MIN_PREVIOUSLY_ISSUED_LOANS_NUMBER int,

    ACM_ENABLED BIT NOT NULL,
	DATE_INSERTION DATETIME NULL,
	INSERT_BY  VARCHAR (256) NULL,
	DATE_LAST_UPDATE DATETIME NULL,
	UPDATED_BY  VARCHAR (256) NULL,
	ACM_VERSION INT NULL 
	)

ALTER TABLE acm_product add ID_ACM_SETTING_TOPUP BIGINT;

ALTER TABLE [dbo].acm_product WITH CHECK ADD FOREIGN KEY([ID_ACM_SETTING_TOPUP])
REFERENCES [dbo].[ACM_SETTING_TOPUP] ([ID_ACM_SETTING_TOPUP])